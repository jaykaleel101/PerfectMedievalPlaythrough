<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationSequence">
    <operations>
         <!-- The Apiary is now fueled from beeswax instead of meat, because meat did not make sense to me -->
        <li Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="DankPyon_Apiary"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/categories</xpath>
            <value>
                <thingDefs><li>DankPyon_Wax</li></thingDefs>
            </value>
        </li>        
        <li Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="DankPyon_Apiary"]/comps/li[@Class="CompProperties_Refuelable"]/fuelGizmoLabel</xpath>
            <value>
            <fuelGizmoLabel>Beeswax</fuelGizmoLabel>
            </value>
        </li>
        <!-- The Apiary also drops every 5 days 20-75 wax in addition to honeycomb and small chance of a new queen -->
        <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="DankPyon_Apiary"]/comps/li[@Class="ESCP_ThingProducer.CompProperties_ThingProducer"]/items</xpath>
        <value><li>
							<thingDef>DankPyon_Wax</thingDef>
							<countRange>20~75</countRange>
							<weight>1</weight>
                            </li>
        </value>
        </li>       
         <!-- A wild beehive drops also 20 beeswax, this to get your apiary started -->
        <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="DankPyon_BeeHive"]/killedLeavings</xpath>
            <value>
                <DankPyon_Wax>20</DankPyon_Wax>
            </value>
        </li>   
        <!-- Honeycomb was labelled honey, which was confusing, because you have to turn it into honey, so I just labelled it honeycomb -->    
        <li Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="DankPyon_Honeycomb"]/label</xpath>
            <value>
            <label>honeycomb</label>
            </value>
        </li>              
    </operations>
	</Operation>
</Patch>